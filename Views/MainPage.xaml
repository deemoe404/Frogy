<Window x:Class="Frogy.Views.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frogy.Views"
        mc:Ignorable="d"
        Title="MainPage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        
        <ListView ItemsSource="{Binding Path=Overview}"/>
        <ListView ItemsSource="{Binding Path=SourceData}" Grid.Column="1"/>

        <DatePicker SelectedDate="{Binding Path=DisplayDate}" Grid.Row="1"/>
        
        

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="55"/>
            </Grid.ColumnDefinitions>

            <Button Content="DataPath" Command="{Binding Button_Click}"  Grid.Column="1" />
            <TextBlock Text="{Binding Path=DataPath}"/>
        </Grid>
    </Grid>
</Window>
